{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "api/[[...catchall]].ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/src/index.ts" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/src/index.ts": {
      "maxDuration": 30
    }
  }
} 